
# ========================================
# X Backend Environment Variables (Example)
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ----------------------------------------
# Server Configuration
# ----------------------------------------
PORT=8000
NODE_ENV=development

# ----------------------------------------
# Database Configuration
# ----------------------------------------
# MongoDB connection string
# Example: mongodb://localhost:27017/your-database-name
# Or MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database-name
MONGO_URL=

# ----------------------------------------
# JWT Configuration
# ----------------------------------------
# Secret key for JWT token generation (use a strong random string)
# Generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET_KEY=

# ----------------------------------------
# Cloudinary Configuration
# ----------------------------------------
# Get these from: https://cloudinary.com/console
CLOUDINARY_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
